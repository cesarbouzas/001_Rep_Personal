<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckBox
        android:onClick="tipoAveriaClick"
        android:id="@+id/checkBoxChapa"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:text="Chapa y pintura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:onClick="tipoAveriaClick"
        android:id="@+id/checkBoxCristal"
        android:layout_width="129dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Rotura Cristal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxChapa" />

    <CheckBox
        android:onClick="tipoAveriaClick"
        android:id="@+id/checkBoxMecanica"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Avería meacánica"
        app:layout_constraintStart_toStartOf="@+id/checkBoxCristal"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCristal" />
</androidx.constraintlayout.widget.ConstraintLayout>