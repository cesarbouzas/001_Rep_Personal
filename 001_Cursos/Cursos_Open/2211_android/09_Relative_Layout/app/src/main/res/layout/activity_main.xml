<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewFotoAveria"
        android:layout_width="83dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="539dp"
        app:srcCompat="@drawable/ic_baseline_camera_24" />


    <TextView
        android:id="@+id/textViewTituloAveria"
        android:layout_width="260dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/imageViewFotoAveria"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="43dp"
        android:layout_toEndOf="@+id/imageViewFotoAveria"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewDescripcionAveria"
        android:layout_width="260dp"
        android:layout_height="22dp"
        android:layout_below="@+id/textViewTituloAveria"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_toEndOf="@+id/imageViewFotoAveria"
        android:text="TextView" />


</RelativeLayout>