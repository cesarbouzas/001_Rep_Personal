<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:onClick="verAseguradora"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="252dp"
        android:drawableTop="@drawable/ic_launcher_foreground"
        android:text="pulsar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:onClick="tipoAveriaClicked"
        android:id="@+id/checkBox_Chapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Chapa"
        app:layout_constraintStart_toStartOf="@+id/checkBox_Pintura"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Pintura" />

    <CheckBox
        android:onClick="tipoAveriaClicked"
        android:id="@+id/checkBox_Pintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:text="Pintura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:onClick="tipoAveriaClicked"
        android:id="@+id/checkBox_Cristales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cristales"
        app:layout_constraintStart_toStartOf="@+id/checkBox_Chapa"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Chapa" />


    <RadioGroup
        android:id="@+id/radioGroup_Aseguradoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_Mapfre"
            android:onClick="aseguradoraSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mapfre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox_Pintura"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/radioButton_Pelayo"
            android:onClick="aseguradoraSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pelayo"
            app:layout_constraintStart_toStartOf="@+id/radioButton_Mapfre"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_Mapfre" />

    </RadioGroup>

    <ToggleButton
        android:onClick="botonEncendido"
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="244dp"
        android:text="ToggleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>