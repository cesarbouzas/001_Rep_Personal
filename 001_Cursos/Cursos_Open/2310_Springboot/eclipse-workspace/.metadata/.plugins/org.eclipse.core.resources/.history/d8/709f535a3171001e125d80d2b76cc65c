package com.example.spring.controladores;

import java.util.Arrays;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class ControladorPrincipal {
	
	@RequestMapping("/")
	public String paginaPrincipal(Model modelo) {
	List<String> elementosMenu=Arrays.asList("Inicio","Lote1","Lote2","Lote3","Acerca de");
	modelo.addAttribute("elementosMenu",elementosMenu);
		return ("index");
	}
	@RequestMapping("/Inicio")
	public String paginaPrincipal(Model modelo) {
	List<String> elementosMenu=Arrays.asList("Inicio","Lote1","Lote2","Lote3","Acerca de");
	modelo.addAttribute("elementosMenu",elementosMenu);
		return ("index");
	}
	@RequestMapping("/Lote1")
	public String paginaLote1(Model modelo) {
		modelo.addAttribute("Empresa","Comsa");
		return ("lote1");
	}
	@RequestMapping("/lote2")
	public String paginaLote2(Model modelo) {
		modelo.addAttribute("Empresa","Cosfesa");
		return ("lote2");
	}
	@RequestMapping("/lote3")
	public String paginaLote3(Model modelo) {
		modelo.addAttribute("Empresa","CivisGlobal");
		return ("lote3");
	}
	
	
	

}
