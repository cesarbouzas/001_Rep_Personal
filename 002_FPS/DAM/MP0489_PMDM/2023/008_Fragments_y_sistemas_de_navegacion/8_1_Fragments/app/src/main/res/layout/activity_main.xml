<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <Button
            android:id="@+id/btn_FragmentoInicial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="seleccionarFragmento"
            android:text="fragemento 1"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_FragmentoSegundo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="seleccionarFragmento"
            android:text="Fragmento 2"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_FragmentoTercero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="seleccionarFragmento"
            android:text="Fragmento 3"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayoutContenedordeFragments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
       android:orientation="horizontal">
    </LinearLayout>
    </LinearLayout>